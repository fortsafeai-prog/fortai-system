{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "nixpacks"
  },
  "services": {
    "backend": {
      "source": "./enhanced-backend",
      "build": {
        "command": "npm install && npx playwright install chromium"
      },
      "start": {
        "command": "npm start"
      },
      "variables": {
        "PORT": "8000",
        "NODE_ENV": "production",
        "PLAYWRIGHT_SKIP_BROWSER_DOWNLOAD": "false"
      }
    },
    "frontend": {
      "source": "./mock-frontend",
      "start": {
        "command": "npm start"
      },
      "variables": {
        "PORT": "3000",
        "NODE_ENV": "production"
      }
    },
    "website": {
      "source": "./website",
      "start": {
        "command": "npm start"
      },
      "variables": {
        "PORT": "8080",
        "NODE_ENV": "production"
      }
    }
  }
}